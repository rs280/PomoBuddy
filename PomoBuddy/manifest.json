{
    "manifest_version": 2,
    "name": "PomoBuddy",
    "description": "PomoBuddy blocks distracting sites according to the Pomodoro Technique which is proven to increase productivity while preventing overworking and encouraging breaks.",
    "version": "1.2",
    "icons": {
        "16": "./images/16.png",
        "32": "./images/32.png",
        "48": "./images/48.png",
        "64": "./images/64.png",
        "128": "./images/128.png"
    }, 

    "background": {
        "scripts": ["timer.js", "block_sites.js", "cookie_functions.js", "background.js"]
    },

    "browser_action": { 
    "default_popup": "popup.html",
    "default_title": "PomoBuddy"
    },
    "permissions": [
        "tabs",
        "alarms", 
        "cookies", 
        "debugger", 
        "webRequestBlocking", 
        "notifications", 
        "tts",

     	"webRequest",
   	    "activeTab",
        "http://*/*",
        "https://*/*"
    ]
}

